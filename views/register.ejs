<!DOCTYPE html>
<html>
<head>
	<title>Sign In</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="/static/css/signup.css">
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>


<!-- Content part starts -->
<body background= "/static/images/class1bg.jpeg">
	<!-- Jumbotron container starts -->
	<div class="jumbotron">
		<!-- Box container starts -->
		<div class="box"></div>

			<!-- Form starts -->
			<form action="/login" method="post">
				<!-- Container for SignIn Starts -->
				<div class="container" id="f1">

					<legend>Already Have an Account then SignIn</legend>
					<h1>Sign In</h1>
					<div class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
				  		<input id="rcorners4" id="email" type="text" class="form-control" name="email" placeholder="Email">
					</div>
				
					<div class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
						<input id="rcorners4" id="password" type="password" class="form-control" name="password" placeholder="Password">
					</div>
					<input type="submit" class="sub">
				
					<!-- Social Icons starts -->
					<div class="social">
						<div class="social-icon1">
							<a href="#">
								<i class="fa fa-facebook"></i>
							</a>
							<a href="#">
								<i class="fa fa-twitter"></i>
							</a>
							<a href="#">
								<i class="fa fa-instagram"></i>
							</a>
							<a href="#">
								<i class="fa fa-linkedin"></i>
							</a>
						</div>
					</div>
					<!-- Social Icons Ends -->
				</div>
			</form>
			<!-- Container for SignIn Ends -->

			<form name="signupForm" action="/register" method="post" onsubmit="return validateForm()">
				<!-- Container for SignUp starts -->
				<div class="container1" id="f2">

					<legend>Create Account to SignIn</legend>
					<h1>Sign Up</h1>
					<div class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
				  		<input id="rcorners4" id="fname" type="text" class="form-control" name="fname" placeholder="First Name*">
					</div>
					<div class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
						<input id="rcorners4" id="lname" type="text" class="form-control" name="lname" placeholder="Last Name*">
					</div>
					<div class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
						<input id="rcorners4" id="mobileNo" type="text" class="form-control" name="mobileNo" placeholder="Mobile No">
					</div>
					<div class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
						<input id="rcorners4" id="email" type="text" class="form-control" name="email" placeholder="Email*">
					</div>
					<div class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
						<input id="rcorners4" id="password" type="password" class="form-control" name="password1" placeholder="Password">
					</div>
					<div class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
						<input id="rcorners4" id="password" type="password" class="form-control" name="password2" placeholder="Confirm Password">
					</div>
					<button id="b" href="#" class="btn btn-primary">SignUp</button>

					<div class="social">
						<div class="social-icon">
							<a href="#">
								<i class="fa fa-facebook"></i>
							</a>
							<a href="#">
								<i class="fa fa-twitter"></i>
							</a>
							<a href="#">
								<i class="fa fa-instagram"></i>
							</a>
							<a href="#">
								<i class="fa fa-linkedin"></i>
							</a>
						</div>
					</div>
				</div>
				<!-- Container for SignUp ends -->
			</form>
			<!-- Form Ends -->
		</div>
		<!-- Box container Ends -->
	</div>
	<!-- Jumbotron Container Ends -->

	<script>
		function validateForm() {
		  const password1 = document.forms["signupForm"]["password1"].value;
		  const password2 = document.forms["signupForm"]["password2"].value;
		  if (password1 !== password2) {
			alert("Passwords dont match");
			return false;
		  }
		}
	</script>
</body>
<!-- Content Part Ends -->
</html>